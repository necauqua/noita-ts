{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "@noita-ts/base/node_modules/lua-types/jit",
      "@noita-ts/base/node_modules/@typescript-to-lua/language-extensions",
      "@noita-ts/base/types/api"
    ]
  },
  "tstl": {
    "noResolvePaths": ["ffi", "bit"],
    "luaTarget": "JIT",
    "luaLibImport": "require-minimal",
    "noImplicitSelf": true
  }
}
